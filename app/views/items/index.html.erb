
<p id="notice"><%= notice %></p>
<h1 style="text-align: center;">Welcome</h1>

<% if logged_in? %>
    <h1 style="text-align: center;">You are Logged In, <%= current_user.username %></h1>
<%end%>

<h1 style="text-align: center;">Your To-Do List</h1>

<table style=" margin-left: 650px; margin-right: 500px;">
  <thead>
    <tr>
      <th>What To Do Today:</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody style="border: 2px solid black; ">
    <% @items.each do |item| %>
      <tr>
        <td><%= item.item %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div style="text-align: center;">
<%= link_to 'New Item', new_item_path %>
<br>

<%= button_to  "Log out", 'sessions/new',method: :get %>
</div>